---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const aboutEntry = await getEntry('pages', 'about');
if (!aboutEntry) {
  throw new Error('About page not found');
}

const { title, content } = aboutEntry.data;
---

<Layout title={title}>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-blue-600 to-purple-700 text-white py-20">
      <div class="absolute inset-0 bg-black opacity-20"></div>
      <div class="relative container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent">
          About PCFixHub
        </h1>
        <p class="text-xl max-w-2xl mx-auto">
          Your trusted partner for all PC repairs, upgrades, and tech solutions. Empowering your digital world with expert care.
        </p>
      </div>
    </section>

    <!-- Content Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-2xl p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">{title}</h2>
          <div class="prose prose-lg max-w-none text-gray-700" set:html={content} />
        </div>
      </div>
    </section>
  </div>
</Layout>