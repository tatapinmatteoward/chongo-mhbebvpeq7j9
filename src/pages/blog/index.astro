---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('pages', ({ id }) => id.startsWith('blog/'));
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="PCFixHub - Fix Your PC Errors in Minutes" description="Explore our blog for quick fixes to common PC errors and optimization tips.">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4">
    <div class="max-w-7xl mx-auto">
      <header class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          Fix Your PC Errors in Minutes
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Discover expert tips, guides, and solutions to resolve common PC issues quickly and efficiently.
        </p>
      </header>

      {sortedPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl group">
              <div class="h-2 bg-gradient-to-r from-blue-500 to-purple-500"></div>
              <div class="p-6">
                <h2 class="text-2xl font-semibold text-gray-800 mb-3 group-hover:text-blue-600 transition-colors duration-200">
                  <a href={`/blog/${post.slug}/`} class="hover:underline">{post.data.title}</a>
                </h2>
                <div class="flex items-center text-gray-500 mb-4">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                  </svg>
                  {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </div>
                <p class="text-gray-600 mb-6 line-clamp-3">
                  {post.data.excerpt || 'Discover quick fixes and tips for your PC errors.'}
                </p>
                <a href={`/blog/${post.slug}/`} class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white font-medium rounded-lg transition-all duration-200 hover:from-blue-600 hover:to-purple-600 hover:shadow-md">
                  Read article
                  <svg class="w-4 h-4 ml-2 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-20">
          <div class="text-6xl mb-4">ðŸ”§</div>
          <h2 class="text-2xl font-semibold text-gray-700 mb-2">No Blog Posts Yet</h2>
          <p class="text-gray-500">We're working on bringing you the latest PC fixes. Check back soon!</p>
        </div>
      )}
    </div>
  </div>
</Layout>